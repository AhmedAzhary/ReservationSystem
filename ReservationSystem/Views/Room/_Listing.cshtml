@model List<ReservationSystem.DTV.RoomDTV>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th style="text-align: center;">رقم الغرفة</th>
            <th style="text-align:center;">الدور</th>
            <th style="text-align:center;">النوع</th>
            <th style="text-align:center;">الاجرائات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center;">@item.Name</td>
                <td style="text-align:center;">@item.Floor</td>
                <td style="text-align:center;">@(EnumHelper<enums.RoomType>.GetDisplayValue((enums.RoomType)item.TypeID))</td>
                <td style="text-align:center;"><button type="button" onclick="reserve(@item.ID)" class="btn btn-link">حجز</button></td>
            </tr>
        }
    </tbody>
</table>
