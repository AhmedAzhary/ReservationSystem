@model List<ReservationSystem.DTV.ReservationDTV>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th style="text-align: center;">اسم النزيل</th>
            <th style="text-align:center;">المبلغ المدفوع</th>
            <th style="text-align:center;">الرقم القومى/الباسبور</th>
            <th style="text-align:center;">تاريخ الوصول</th>
            <th style="text-align:center;">تاريخ المغادرة</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center;">@item.Name</td>
                <td style="text-align:center;">@item.Cash</td>
                <td style="text-align:center;">@item.IdOrPassPort</td>
                <td style="text-align:center;"><a href="/Room/Reserve/@item.ID" class="btn btn-link">حجز</a></td>
            </tr>
        }
    </tbody>
</table>