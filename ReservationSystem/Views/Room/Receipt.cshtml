
@{
    ViewBag.Title = "Receipt";
    Layout = null;
}


<head>



    <style>
        span:not(.span-ar) {
            font-style: italic;
            font-weight: bold;
            direction: ltr;
        }

        span.span-ar {
        }

        .bordered {
            border: 1px solid darkblue !important;
            padding: 4px;
            border-radius: 4px;
        }

        .dotted {
            border-bottom: 2px dotted darkblue !important;
        }

            .dotted::before {
                content: ': ';
            }

        .row {
            margin-right: 0;
            margin-left: 0;
        }

            .row > div {
                margin-right: 0.5rem;
                margin-left: 0.5rem;
            }

            .row > span {
                margin-right: 0.25rem;
                margin-left: 0.25rem;
            }

            .row > input {
                margin-right: 0.125rem;
                margin-left: 0.125rem;
            }

        .info-row > span,
        .info-row > div,
        .info-row > div > span {
            margin: 0;
            padding: 0;
        }

            .info-row > span:not(.span-ar):not(.dotted)::after,
            .info-row > div > span:not(.span-ar):not(.dotted)::after {
                content: ' :';
            }

            .info-row > .span-ar,
            .info-row > div > .span-ar {
                text-align: initial;
            }

        .info-col > br,
        .info-col > div > br {
            line-height: 1;
        }
    </style>
</head>
<body style="padding: 1rem; color: darkblue; direction: rtl;">
    <!-- Fixed Postion Logo Image -->
    <img src="D:\Projects\.NET\ReservationSystem\ReservationSystem\Content\images\logo.png"
         alt="logo.png"
         style="max-height: 100px; position: absolute; left: 1rem;" />

    <div class="d-flex flex-column align-items-center">
        <span style="font-size: large;">International Medical Center IMC</span>
        <span style="font-size: small;">Hotel Management Dept.</span>
        <br style="line-height: 1;" />
        <span>Guest Registration Card</span>
        <span class="span-ar">البيانات الشخصية لحجز الغرفة / الجناح</span>
    </div>

    <br />

    <div class="d-flex flex-column align-items-center">
        <div class="row justify-content-start">
            <div class="row justify-content-center">
